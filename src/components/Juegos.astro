---

<section id="juegos" class="py-10">
  <div class="container mx-auto px-5">
    <h2 class="text-2xl font-bold mb-6">JUEGOS</h2>

    <!-- Grid de juegos -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
      {juegos.map((juego) => (
        <div class="relative max-w-sm rounded-lg overflow-hidden shadow-lg mx-auto">
          <img src={juego.imagen} alt={juego.nombre} class="w-full h-48 object-cover" />
          <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 to-transparent p-4 flex justify-between items-center">
            <!-- Logos de plataformas -->
            <div class="flex gap-2">
              {juego.plataformas.map((plataforma) => (
                <a href={plataforma.link} target="_blank">
                  <img src={plataforma.logo} alt={plataforma.nombre} class="w-6 h-6" />
                </a>
              ))}
            </div>
            <!-- Botón principal -->
            <a href={juego.link} target="_blank"
              class="bg-blue-600 text-white px-3 py-1 rounded-md text-sm hover:bg-blue-500 transition">
              {juego.accion}
            </a>
          </div>
        </div>
      ))}
    </div>

    <!-- Botón "ver más juegos" -->
    <div class="text-center mt-8">
      <a href="https://store.steampowered.com/" target="_blank"
        class="text-white font-semibold hover:underline">
        Ver más juegos en Steam
      </a>
      <span class="text-white font-semibold">||</span>
      <a href="https://store.steampowered.com/" target="_blank"
        class="text-white font-semibold hover:underline">
        Ver más juegos en Epic
      </a>
    </div>
  </div>
</section>

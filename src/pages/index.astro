---
import Navbar from '../components/Header.astro'
import Hero from '../components/Hero.astro'
import Carrusel from '../components/Promociones.astro'
import Juegos from '../components/Juegos.astro'
import Paquetes from '../components/Paquetes.astro'
import Resenas from '../components/Reseñas.astro'
import Nosotros from '../components/Nosotros.astro'
import Footer from '../components/Footer.astro'
import Layout from '../layouts/Layout.astro'
---

<Layout>
  <h1 class="text-3xl font-bold text-center mt-10">
      ¡Hola desde Tailwind 4!
    </h1>

    <p class="text-center text-lg mt-4">
      Este es un párrafo con estilos de Tailwind.
    </p>
    <Navbar />
    <main>
      <Hero />
      <Carrusel />
      <Juegos />
      <Paquetes />
      <Resenas />
      <Nosotros />
    </main>
    <Footer />
</Layout>
